<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/message_compose">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dip"
        android:layout_marginLeft="16dip"
        android:layout_marginEnd="16dip"
        android:layout_marginRight="16dip"
        android:animateLayoutChanges="true"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/from_label"
            style="@style/ComposeEditTextLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minWidth="50dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:text="@string/recipient_from"
            android:textColor="#aaa" />

        <TextView
            android:id="@+id/identity"
            style="@style/ComposeEditTextLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:singleLine="true"
            tools:text="Address" />

        <ImageView
            android:id="@+id/pgp_inline_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:tint="@color/light_black"
            android:visibility="gone"
            app:srcCompat="@drawable/compatibility"
            tools:visibility="visible" />


        <com.fsck.k9.view.ToolableViewAnimator
            android:id="@+id/crypto_special_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:inAnimation="@anim/fade_in"
            android:outAnimation="@anim/fade_out"
            android:visibility="gone"
            app:previewInitialChild="2"
            tools:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:tint="@color/light_black"
                app:srcCompat="@drawable/compatibility" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:tint="?attr/openpgp_blue"
                app:srcCompat="@drawable/status_signature_verified_cutout" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:tint="?attr/openpgp_blue"
                    app:srcCompat="@drawable/status_signature_verified_cutout" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|bottom"
                    android:tint="@color/light_black"
                    app:srcCompat="@drawable/compatibility" />
            </FrameLayout>

        </com.fsck.k9.view.ToolableViewAnimator>


        <com.fsck.k9.view.ToolableViewAnimator
            android:id="@+id/crypto_status"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:inAnimation="@anim/fade_in"
            android:outAnimation="@anim/fade_out"
            android:visibility="gone"
            app:previewInitialChild="2"
            tools:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tint="?attr/openpgp_dark_grey"
                app:srcCompat="@drawable/status_lock_disabled" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tint="?attr/openpgp_red"
                app:srcCompat="@drawable/status_lock_error" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:tint="?attr/openpgp_grey"
                    app:srcCompat="@drawable/status_dots" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:tint="?attr/openpgp_grey"
                    app:srcCompat="@drawable/status_lock" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:tint="?attr/openpgp_grey"
                    app:srcCompat="@drawable/status_dots" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:tint="?attr/openpgp_red"
                    app:srcCompat="@drawable/status_lock_error_dots_1" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:tint="?attr/openpgp_grey"
                    app:srcCompat="@drawable/status_dots" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:tint="?attr/openpgp_red"
                    app:srcCompat="@drawable/status_lock_none_dots_1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:tint="?attr/openpgp_grey"
                    app:srcCompat="@drawable/status_lock_disabled" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:tint="?attr/openpgp_grey"
                    app:srcCompat="@drawable/status_dots" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:tint="?attr/openpgp_orange"
                    app:srcCompat="@drawable/status_lock_dots_2" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:tint="?attr/openpgp_grey"
                    app:srcCompat="@drawable/status_dots" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:tint="?attr/openpgp_green"
                    app:srcCompat="@drawable/status_lock_dots_3" />

            </FrameLayout>

        </com.fsck.k9.view.ToolableViewAnimator>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:id="@+id/to_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:minHeight="50dp">

        <TextView
            android:id="@+id/to_label"
            style="@style/ComposeEditTextLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:labelFor="@+id/to"
            android:minWidth="50dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/recipient_to"
            android:textColor="#aaa" />

        <com.fsck.k9.pEp.ui.ActionRecipientSelectView
            android:id="@+id/to"
            style="@style/ComposeEditTextLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@id/to_label"
            android:background="@android:color/transparent"
            android:dropDownAnchor="@id/to_wrapper"
            android:dropDownWidth="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress|textMultiLine"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Recipient" />

        <ViewAnimator
            android:id="@+id/recipient_expander_container"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:inAnimation="@anim/fade_in"
            android:outAnimation="@anim/fade_out">

            <ImageView
                android:id="@+id/recipient_expander"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:scaleType="centerCrop"
                android:src="?attr/iconActionExpand" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </ViewAnimator>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/cc_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/cc_label"
            style="@style/ComposeTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/cc"
            android:minWidth="50dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/recipient_cc" />

        <com.fsck.k9.pEp.ui.ActionRecipientSelectView
            android:id="@+id/cc"
            style="@style/ComposeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:dropDownAnchor="@id/cc_wrapper"
            android:dropDownWidth="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress|textMultiLine"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

    </LinearLayout>

    <View
        android:id="@+id/cc_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bcc_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/bcc_label"
            style="@style/ComposeTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/bcc"
            android:minWidth="50dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/recipient_bcc" />

        <com.fsck.k9.pEp.ui.ActionRecipientSelectView
            android:id="@+id/bcc"
            style="@style/ComposeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:dropDownAnchor="@id/bcc_wrapper"
            android:dropDownWidth="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress|textMultiLine"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

    </LinearLayout>

    <View
        android:id="@+id/bcc_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:visibility="gone" />

</LinearLayout>
