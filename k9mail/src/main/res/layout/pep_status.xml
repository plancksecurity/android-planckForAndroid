<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".pEp.ui.privacy.status.PEpStatus"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pep_status_layout"
    android:background="@color/white">

    <include layout="@layout/big_pep_toolbar_layout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/its_own_messageTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="This is an own message, no communication partner involved."
        android:layout_margin="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

</LinearLayout>
