<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/defaultDialogBackground"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingStart="@dimen/key_import_floating_horizontal_margin"
    android:paddingLeft="@dimen/key_import_floating_horizontal_margin"
    android:paddingEnd="@dimen/key_import_floating_horizontal_margin"
    android:paddingRight="@dimen/key_import_floating_horizontal_margin"
    android:paddingBottom="@dimen/key_import_floating_vertical_margin"
    tools:context="com.fsck.k9.planck.manualsync.ImportWizardFrompEp"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="16dp"
    tools:layout_gravity="center"
    android:minHeight="@dimen/key_import_floating_height"
    tools:layout_width="@dimen/key_import_floating_width">

    <include
        android:id="@+id/include"
        layout="@layout/handshake_toolbar_layout" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        tools:text="A second device was detected. We can form a device group to sync all your privacy on both devices. Shall we start synchronizing\?" />

    <LinearLayout
        android:id="@+id/trustwordsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="gone">

        <TextView
            android:id="@+id/trustwords_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif"
            android:text="@string/trustwords_title"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold"
            tools:text="@string/trustwords_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trustwords"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="IMPORTUNER METAPHOR ARNO DIA SEMIYEARLY SIDEREAL CORONATE CURSEDNESS PULMONARY DUVET" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom">

                <ImageView
                    android:id="@+id/show_long_trustwords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selectable_message_background"
                    android:paddingStart="8dp"
                    android:src="@drawable/ic_show_long_trustwords"
                    android:visibility="visible" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fpr_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trustwordsContainer"
        app:layout_constraintBottom_toTopOf="@id/currentState"
        tools:visibility="gone">

        <TextView
            android:id="@+id/fpr_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="@string/fpr_title"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold"
            tools:text="Fingerprints" />

        <TextView
            android:id="@+id/fpr_current_device_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="@string/fpr_actual_title"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold"
            tools:text="This device" />

        <TextView
            android:id="@+id/fpr_current_device_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:ellipsize="none"
            android:textStyle="bold"
            tools:text="A629 F620 F9C4 9310 39B2\n7356 FACC 6EF3 3BD4 771D" />

        <TextView
            android:id="@+id/fpr_new_device_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="@string/fpr_new_device_title"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold"
            tools:text="New device" />

        <TextView
            android:id="@+id/fpr_new_device_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:ellipsize="none"
            android:textStyle="bold"
            tools:text="A629 F620 F9C4 9310 39B2\n7356 FACC 6EF3 3BD4 771D" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="133dp"
        android:layout_height="55dp"
        android:indeterminateDrawable="@drawable/add_second_device"
        android:visibility="gone"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@id/dissmissActionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fpr_container" />

    <ImageView
        android:id="@+id/currentState"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@id/dissmissActionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fpr_container"
        tools:visibility="visible" />

    <Button
        android:id="@+id/afirmativeActionButton"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keysync_wizard_action_next"
        android:textColor="?attr/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/dissmissActionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dissmissActionButton"
        tools:text="next" />

    <Button
        android:id="@+id/negativeActionButton"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_import_reject"
        android:textColor="@color/planck_red"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/afirmativeActionButton"
        app:layout_constraintStart_toEndOf="@+id/dissmissActionButton"
        app:layout_constraintTop_toTopOf="@+id/dissmissActionButton"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Reject" />

    <Button
        android:id="@+id/dissmissActionButton"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keysync_wizard_action_cancel"
        android:textColor="?attr/defaultColorOnBackground"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>
