<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PlanckFabButton">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:elevation">4dp</item>
        <item name="elevation">4dp</item>
        <item name="fabSize">normal</item>
        <item name="backgroundTint">?attr/fab_menu_background_tint</item>
        <item name="pressedTranslationZ">2dp</item>
    </style>

    <style name="PlanckFabButton.ComposeMessage">
        <item name="backgroundTint">?attr/compose_fab_background_tint</item>
    </style>

    <style name="SelectAuthScreenCardViews">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SelectAuthScreenButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selectable_white_button_background</item>
        <item name="android:textColor">@color/planck_gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">60dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="SelectAuthScreenGoogleBetaFeature">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/beta_feature_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:text">@string/google_button_beta_feature</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="PermissionsScreen.ContinueButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">?attr/defaultButtonTextColor</item>
        <item name="android:background">@drawable/planck_button_selector</item>
    </style>
</resources>

