<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GrayScaleColorText1">
        <item name="android:textColor">?attr/grayScaleColorOnBackground1</item>
    </style>

    <style name="GrayScaleColorText3">
        <item name="android:textColor">?attr/grayScaleColorOnBackground3</item>
    </style>

    <style name="GrayScaleColorText2">
        <item name="android:textColor">?attr/grayScaleColorOnBackground2</item>
    </style>

    <style name="PEpSecurityStatusTextView" parent="GrayScaleColorText1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/univers_lts_sd</item>
    </style>

    <style name="MediumComposeText" parent="GrayScaleColorText1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ComposeLabel" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/compose_gray</item>
    </style>

    <style name="ComposeLabelLarge" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/compose_gray</item>
    </style>

    <style name="ComposeText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColorHint">@color/compose_gray</item>
    </style>

    <style name="ComposeTextLarge" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColorHint">@color/compose_gray</item>
    </style>

    <style name="ComposeEditTextLarge" parent="ComposeTextLarge">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">textMultiLine|textAutoCorrect|textCapSentences</item>
    </style>

    <style name="TitleMessageItemText" parent="GrayScaleColorText1">
        <item name="android:clickable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubTitleMessageItemText" parent="GrayScaleColorText1">
        <item name="android:clickable">false</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextMessageItemText" parent="GrayScaleColorText3">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DateMessageItemText" parent="GrayScaleColorText2">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
    </style>

    <style name="CalendarInviteText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:autoLink">all</item>
    </style>

    <style name="SelectAuthScreenWelcomeTo">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">48dp</item>
    </style>

    <style name="SelectAuthScreenPleaseChoose">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="TermsAndConditionsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">all</item>
        <item name="android:linksClickable">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>

    <style name="SelectAuthScreenTermsAndConditions" parent="TermsAndConditionsText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/link_primary_color</item>
    </style>

    <style name="UnsecureRecipientsWarning">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="PermissionsScreen.explanation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="RecipientSelectViewErrorText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/compose_unsecure_delivery_warning</item>
        <item name="android:visibility">gone</item>
    </style>


</resources>

