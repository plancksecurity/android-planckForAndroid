<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.K9Dialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="android:windowTitleStyle">?android:attr/textAppearanceLargeInverse</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@drawable/panel_separator</item>
    </style>

    <!--
      Fix a bug with AutoCompleteTextView
      See https://code.google.com/p/android/issues/detail?id=5237
    -->
    <style name="Widget.K9.AutoCompleteTextView" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="UnreadWidgetContainer">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UnreadWidgetTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    <style name="ShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#99444444</item>
    </style>

    <style name="PositiveBulletPoint">
        <item name="android:src">@drawable/bullet_point_positive</item>
        <item name="android:tint">?attr/tintColorBulletPointPositive</item>
    </style>

    <style name="NeutralBulletPoint">
        <item name="android:src">@drawable/bullet_point_neutral</item>
        <item name="android:tint">?attr/tintColorBulletPointNeutral</item>
    </style>

    <style name="NegativeBulletPoint">
        <item name="android:src">@drawable/bullet_point_negative</item>
        <item name="android:tint">?attr/tintColorBulletPointNegative</item>
    </style>

    <style name="planckIndicatorTVActionBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/univers_lts_sd</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewCustomFont" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <!--
            <item name="fontPath">fonts/CourierNew.ttf</item>
            TODO:: review how it shall be done now, as it does not work anymore
        -->
    </style>

    <style name="ToolbarTheme" parent="Theme.K9.DayNight">
        <item name="android:textColorPrimary">?attr/defaultToolbarTextColor</item>
        <item name="android:textColorSecondary">?attr/defaultToolbarTextColor</item>
        <item name="android:textColorHint">?attr/searchBarHintColor</item>
    </style>

    <style name="HandshakeToolbarTheme" parent="Theme.K9.DayNight">
        <item name="android:textColorPrimary">?attr/defaultColorOnBackground</item>
        <item name="android:textColorSecondary">?attr/grayScaleColorOnBackground1</item>
    </style>

    <style name="ToolbarWhiteTheme" parent="Theme.K9.DayNight">
        <item name="android:textColorPrimary">?attr/defaultToolbarTextColor</item>
        <item name="android:textColorSecondary">?attr/defaultToolbarTextColor</item>
    </style>

    <style name="planckStyleButton" parent="Theme.AppCompat.Light">
        <item name="android:textColor">?attr/defaultButtonTextColor</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="planckStyleButton.Red">
        <item name="colorControlHighlight">@color/dark_red</item>
        <item name="colorButtonNormal">?attr/rejectButtonDefaultColor</item>
    </style>

    <style name="planckStyleButton.Green">
        <item name="colorControlHighlight">@color/planck_green</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="planckStyleButton.Grey">
        <item name="colorControlHighlight">?attr/grayScaleColorOnBackground2</item>
        <item name="colorButtonNormal">@color/planck_gray</item>
    </style>

    <style name="planckThemeOverlay" parent="ThemeOverlay.AppCompat.Dark">
    </style>

    <style name="planckThemeOverlay2" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="Theme.Floating.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--item name="isFloatingWindow">true</item-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:elevation">4dp</item>
        <item name="android:popupElevation">4dp</item>
        <item name="android:windowElevation">4dp</item>
    </style>

    <style name="Theme.Floating" parent="Theme.Floating.Base" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowTitleStyle">?android:attr/textAppearanceLargeInverse</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OverlayTheme" parent="Theme.K9.DayNight">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:textColor">?attr/dialogBodyDefaultTextColor</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/negativeButtonColor</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/intenseColorOnBackground</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="RedButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/planck_red</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="WelcomeWizardButton" parent="AlertDialogStyle.Light">
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/default_button_color</item>
    </style>

    <style name="SyncDisableDialog.Light.Base" parent="AlertDialogStyle.Light">
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/RedButtonStyle</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SyncDisableDialog.Dark.Base" parent="AlertDialogStyle.Dark">
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/RedButtonStyle</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SyncDisableDialog.Light" parent="SyncDisableDialog.Light.Base">
        <item name="android:layout_height">@dimen/key_import_floating_height</item>
        <item name="android:layout_width">@dimen/key_import_floating_width</item>
    </style>

    <style name="SyncDisableDialog.Dark" parent="SyncDisableDialog.Dark.Base">
        <item name="android:layout_height">@dimen/key_import_floating_height</item>
        <item name="android:layout_width">@dimen/key_import_floating_width</item>
    </style>

    <style name="ResetAllAccountsDialog.Light" parent="AlertDialogStyle.Light">
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/RedButtonStyle</item>
    </style>

    <style name="ResetAllAccountsDialog.Dark" parent="AlertDialogStyle.Dark">
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/RedButtonStyle</item>
    </style>

    <style name="CalendarInviteScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:background">@drawable/calendar_event_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="AccountSelectAuthScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_startup</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="AccountSelectAuthScreen.plancklogo" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="srcCompat">@drawable/planck_logo_light</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="PermissionsScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="PermissionsScreen.planckLogo" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="srcCompat">@drawable/planck_logo_purple</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>

